  p <span class="font-medium">E-mail:</span> #{tutor.email}
  p <span class="font-medium">Endere√ßo:</span> #{tutor.address}
  p <span class="font-medium">Pets:</span>
  ul(class="list-disc ml-8")
    for pet in pets 
      li 
        a(href=`/registry/pet/${pet._id}`) #{pet.name}
